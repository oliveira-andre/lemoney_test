<div class="columns is-multiline is-mobile">
  <div class="column is-8 is-offset-2">
    <div class="card">
      <div class="card-content">
        <%= form_with(model: offer, url: url, local: true) do |f| %>
          <%= f.label :advertiser_name, class: :label %>
          <%= f.text_field :advertiser_name, required: true, class: :input %>

          <%= f.label :url, 'URL', class: :label %>
          <%= f.url_field :url, required: true, class: :input %>

          <%= f.label :description, class: :label %>
          <%= f.text_area :description, required: true, maxlength: 500, class: :textarea %>

          <%= f.label :starts_at, class: :label %>
          <%= f.datetime_field :starts_at, required: true, class: :input %>

          <%= f.label :ends_at, class: :label %>
          <%= f.datetime_field :ends_at, class: :input %>

          <%= f.check_box :premium, class: :label %>
          <%= f.label :premium %>

          <div class="column is-12 has-text-centered">
            <%= f.submit :submit, class: 'button is-primary is-fullwidth' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
