<h1>Offers</h1>

<%= link_to 'new offer', new_admin_offer_path %>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>URL</th>
      <th>status</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.id %></td>
        <td><%= offer.advertiser_name %></td>
        <td><%= offer.url %></td>
        <td><%= offer.status %></td>
        <td>
          <%= link_to "[edit]", edit_admin_offer_path(offer.id) %>
        </td>
        <td>
          <%= link_to enable_or_disable(offer), admin_offer_path(offer.id, toggle: true), method: :put %>
        </td>
        <td>
          <%= link_to "[destroy]", admin_offer_path(offer.id), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
