<div class="columns is-multiline is-mobile">
  <div class="column is-12">
    <div class="card">
      <header class="card-header">
        <h1 class="card-header-title">Offers</h1>
        <%= link_to 'new offer', new_admin_offer_path, class: 'button is-pulled-right' %>
      </header>

      <div class="card-content">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>URL</th>
              <th>status</th>
              <th colspan="3">actions</th>
            </tr>
          </thead>
          <tbody>
            <% @offers.each do |offer| %>
              <tr>
                <td><%= offer.id %></td>
                <td><%= offer.advertiser_name %></td>
                <td><%= offer.url %></td>
                <td><%= offer.status %></td>
                <td>
                  <%= link_to "[edit]", edit_admin_offer_path(offer.id) %>
                </td>
                <td>
                  <%= link_to enable_or_disable(offer), admin_offer_path(offer.id, toggle: true), method: :put %>
                </td>
                <td>
                  <%= link_to "[destroy]", admin_offer_path(offer.id), method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
